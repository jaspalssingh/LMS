<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Dashboard</title>
</head>

<body class="bg-gray-200">

    <div class="container mx-auto p-4">

        <!-- Header -->
        <div class="flex justify-between items-center mb-4 px-4">
            <h1 class="text-2xl font-bold ">Dashboard</h1>
            <a class="bg-red-500 text-white px-4 py-2 rounded" href="/signout">Sign Out</a>
        </div>
        <h2 class="text-xl font-semibold mb-4">Administrative Action</h2>
        <div class="mt-3 mb-4 px-4 py-3">
            <a class="bg-blue-500 text-white px-4 py-2 rounded mr-4" href="/courses/new">Create New Course</a>
            <a class="bg-green-500 text-white px-4 py-2 rounded" href="/report">View Report</a>
        </div>
        <h2 class="text-xl font-semibold mb-4">Enrolled Courses</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <!-- Course Block 1 -->
            <div class="bg-white p-4 rounded shadow">
                <h2 class="text-lg font-semibold mb-2">Course Title 1 (Dummy)</h2>
                <div class="mt-4">
                    <button class="bg-blue-500 text-white px-4 py-2 rounded mr-2">View Course</button>
                    <button class="bg-green-500 text-white px-4 py-2 rounded">Enroll</button>
                </div>
            </div>



        </div>
        <h2 class="text-xl font-semibold mb-4">Available Courses</h2>
        <!-- Course Blocks -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <!-- Course Block 1 -->
            <% for(var i=0; i<coursename.length;i++) { %>
                <div class="bg-white p-4 rounded shadow">
                    <h2 class="text-lg font-semibold mb-2">
                        <%= coursename[i].coursename %>
                    </h2>
                    <div class="mt-4">
                        <button class="bg-blue-500 text-white px-4 py-2 rounded mr-2">View Course</button>
                        <button class="bg-green-500 text-white px-4 py-2 rounded">Enroll</button>
                    </div>
                </div>
                <% } %>

        </div>

    </div>

</body>

</html>